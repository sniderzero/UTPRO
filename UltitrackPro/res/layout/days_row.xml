<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llhDaylistRow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/llvDay_Label"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="@string/sName"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/llhDay_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvDay_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="@string/sDay"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="@string/sDayNumber"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llvStatus"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:contentDescription="Skipped"
            android:src="@drawable/ic_x_red" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:contentDescription="Completed"
            android:src="@drawable/ic_checkmark_green" />

    </RelativeLayout>

</LinearLayout>